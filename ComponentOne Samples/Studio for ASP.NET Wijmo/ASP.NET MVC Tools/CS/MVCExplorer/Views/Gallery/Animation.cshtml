@{
    ViewBag.Title = "Animation";
    Layout = "~/Views/Shared/_WidgetLayout.cshtml";
}
@section header
{
    <script id="scriptInit" type="text/javascript">
        $(document).ready(function () {
            $("#wijgallery").wijgallery({
                thumbsLength: 120
            });

            var transitions = {
                animated: "fade",
                duration: 1000,
                easing: null
            }

            $('#showEffectTypes').change(function () {
                var ee = $("#showEffectTypes option:selected").val();
                $.extend(transitions, { animated: ee });
                $("#wijgallery").wijgallery("option", "transitions", transitions);
            });
        });
    </script>
    <style type="text/css">
        .wijmo-wijcarousel-text span
        {
            padding: 5px;
        }
        
        #wijgallery
        {
            width: 750px;
        }
    </style>
}
