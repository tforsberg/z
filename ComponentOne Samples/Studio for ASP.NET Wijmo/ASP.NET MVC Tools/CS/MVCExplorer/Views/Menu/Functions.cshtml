        $(document).ready(function () {
            $("#menu1").wijmenu({
                mode: "sliding"
                //orientation: 'vertical',
            });
            $("#previous").click(function () {
                $("#menu1").focus().wijmenu("previous");
            });
            $("#next").click(function () {
                $("#menu1").focus().wijmenu("next");
            });
            $("#previousPage").click(function () {
                $("#menu1").focus().wijmenu("previousPage");
