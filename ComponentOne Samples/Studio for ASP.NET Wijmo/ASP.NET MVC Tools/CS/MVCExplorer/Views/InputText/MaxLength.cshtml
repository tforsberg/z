@{
	ViewBag.Title = "MaxLength";
	Layout = "~/Views/Shared/_WidgetLayout.cshtml";
}

@section header
{
	<script id="scriptInit" type="text/javascript">
		$(document).ready(function () {
		    $("#textbox1").wijinputtext({
		        maxLength: 5,
		        text: "12345"
		    });
		});
	</script>
}
<h2>Format</h2>
<div class="main demo">
            <!-- Begin demo markup -->
            <input type="text" id="textbox1" />
            <h6>
                maxlength</h6>
            <p>
                5</p>
            <!-- End demo markup -->
            <div class="demo-options">
                <!-- Begin options markup -->
                <!-- End options markup -->
            </div>
</div>

@section description
{
            <p>
                This sample illustrates how you can use the <b>maxlength</b> option to allow only input 5 character.</p>
}
