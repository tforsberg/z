            <!-- End demo markup -->
            <div class="demo-options">
                <!-- Begin options markup -->
                <label for="selEasing2">
                    Expand direction</label>
                <select id="expandDirection" onchange="applyOptions()" onclick="applyOptions()">
                    <option value="top">top</option>
                    <option value="right">right</option>
                    <option value="bottom" selected="selected">bottom</option>
                    <option value="left">left</option>
                </select>
                <script type="text/javascript" language="javascript">
                	function applyOptions() {
                		// clear fixed padding values that was assigned during vertical animation,
                		// note, this is not needed if you set expandDirection option only once(e.g. from widget constructor)
                		$("#accordion > .ui-accordion-content").css("paddingTop", "").css("paddingBottom", "");
                		$("#accordion").wijaccordion("option", "expandDirection", $("#expandDirection").get(0).value);
                	}    
                </script>
                <!-- End options markup -->
            </div>
        </div>

        @section description
        {
            This sample shows how to easily change the direction of the expanding 
			content area of the wijaccordion using the expandDirection option.
        }
