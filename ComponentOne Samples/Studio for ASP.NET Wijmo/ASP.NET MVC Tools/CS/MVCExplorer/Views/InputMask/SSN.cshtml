@{
	ViewBag.Title = "SSN";
	Layout = "~/Views/Shared/_WidgetLayout.cshtml";
}

@section header
{
	<script id="scriptInit" type="text/javascript">
		$(document).ready(function () {
			$("#textbox1").wijinputmask(
			{
			    mask: '000-00-0000',
			    hidePromptOnLeave: true
			});
		});
	</script>
}
<h2>SSN</h2>
<div class="main demo">
	<!-- Begin demo markup -->
	<input type="text" id="textbox1" />
	<h6>
		Mask</h6>
	<p>
		000-00-0000</p>
	<!-- End demo markup -->
	<div class="demo-options">
		<!-- Begin options markup -->
		<!-- End options markup -->
	</div>
</div>

@section description
{
	<p>
		This sample illustrates how to use the <b>mask</b> option to allow only numeric input.
	</p>
}

