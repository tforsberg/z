@{
	ViewBag.Title = "Overview";
	Layout = "~/Views/Shared/_WidgetLayout.cshtml";
}
@section header
{
	<script id="scriptInit" type="text/javascript">
		$(document).ready(function () {
			$("#textbox1").wijinputmask(
			{
				mask: '(999) 000-0000',
				hidePromptOnLeave: true
			});
		});
	</script>
}
<h2>Overview</h2>
<div class="main demo">
	<!-- Begin demo markup -->
	<input type="text" id="textbox1" value="(412) 867-5309" />
	<h6>
		Mask:</h6>
	<p>
		(999) 000-0000</p>
	<!-- End demo markup -->
	<div class="demo-options">
		<!-- Begin options markup -->
		<!-- End options markup -->
	</div>
</div>

@section description
{
	<p>
		The wijinputmask widget converts an input element into a masked input based on the mask and other options.
	</p>
}

