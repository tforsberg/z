@{
	ViewBag.Title = "Logarithmic";
	Layout = "~/Views/Shared/_WidgetLayout.cshtml";
}
@section header
{
	<script type="text/javascript">
		$(document).ready(function () {
			$("#gauge").wijlineargauge({ value: 50,
				islogarithmic: true,
				labels: {
					style: {
						fill: "#1E395B",
						"font-size": "12pt",
						"font-weight": "800"
					}
				},
				tickMajor: {
					position: "inside",
					interval: 20,
					style: {
						fill: "#1E395B",
						stroke: "none"
					}
				},
				tickMinor: {
					position: "inside",
					visible: true,
					interval: 4,
					style: {
						fill: "#1E395B",
						stroke: "none"
					}
				},
				pointer: {
					shape: "rect",
					length: 0.5,
					style: {
						fill: "#1E395B",
						stroke: "#1E395B"
					}
				},
				face: {
					style: {
						fill: "270-#FFFFFF-#D9E3F0",
						stroke: "#7BA0CC",
						"stroke-width": "4"
					}
				}
			});

			$("#checkbox1").change(function () {
				$("#gauge").wijlineargauge("option", "islogarithmic", $(this).is(":checked"));
			});
		});
	
	</script>
}
<h2>
	Logarithmic</h2>
<div class="main demo">
	<!-- Begin demo markup -->
	<div id="gauge">
	</div>
	<!-- End demo markup -->
	<div class="demo-options">
		<!-- Begin options markup -->
		<input type="checkbox" id="checkbox1" checked="checked" />
		<label for="checkbox1">
			IsLogarithmic</label>
		<!-- End options markup -->
	</div>
</div>
@section description
{
	<p>
		This sample shows how to control the ticks nonuniform use <b>islogarithmic</b> and
		<b>logarithmicBase</b> option</p>
}
