@{
    ViewBag.Title = "TimePicker";
    Layout = "~/Views/Shared/_WidgetLayout.cshtml";
}
@section header
{
	<script id="scriptInit" type="text/javascript">
		$(document).ready(function () {
			$("#textbox1").wijinputdate(
			{
			    pickers: { timePicker: {} },
			    dateFormat: "T",
			    showDropDownButton: true
			});
		});
	</script>
}
<h2>Time Picker</h2>
<div class="main demo">
	<!-- Begin demo markup -->
	<input type="text" id="textbox1" />
	<!-- End demo markup -->
	<div class="demo-options">
		<!-- Begin options markup -->
		<!-- End options markup -->
	</div>
</div>
@section description
{
  <p>
                This sample demonstrates that when the <b>showDropDownButton</b> option is set to <b>true</b>,
                clicking the dropdown button opens time picker to selete the time.</p>
}


