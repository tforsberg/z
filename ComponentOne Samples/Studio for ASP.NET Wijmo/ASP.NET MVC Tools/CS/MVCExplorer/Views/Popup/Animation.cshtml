@{
    ViewBag.Title = "Animation";
	Layout = "~/Views/Shared/_WidgetLayout.cshtml";
}
@section header
{
    <script type="text/javascript">
        $(function () {
            $("#unicorn").wijpopup({
                autoHide: true,
                position: {
                    of: $('#TextBox1'),
                    offset: '0 4'
                }
            });

            $(".duration").bind("change keyup", function () {
                var o = {};
                o[$(this).attr('name')] = $(this).val() * 1;
                $("#unicorn").wijpopup(o);
            });

            $(".effect").bind("change keyup", function () {
                var o = {};
                o[$(this).attr('name')] = $(this).val();
                $("#unicorn").wijpopup(o);
            });

        });

        function popupbeside() {
            $("#unicorn").wijpopup('show');
        }
    </script>
}
<h2>Animation</h2>
        <div class="main demo">
            <!-- Begin demo markup -->
            <div id="unicorn">
                <img src="http://cdn.wijmo.com/images/unicorn.jpg" alt="Popup Unicorn!" />
            </div>
            <div>
                <input name="TextBox1" type="text" id="TextBox1" />
                <input type="button" id="Button4" onclick="popupbeside();" value="popup" />
            </div>
            <!-- End demo markup -->
            <div class="demo-options">
                <!-- Begin options markup -->
                <div class="options">
                    <div class="option-row">
