@model IEnumerable<Role>
<form action="/Member/Role/" class="ajax" data-ajax="{onComplete:function(){$('#_fsearch').submit()}}">

    @Html.Hidden("id", Request.QueryString["id"])
    
    <div class="field">

        @Html.DropDownList("rid", new SelectList(Model,"Id","Name",Request.QueryString["r"]),"Member")
    </div>
    <div class="field center">

        <input type="submit" class="ui-button" value="Save" />

    </div>

</form>
