<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ODataX.DataSourceEditor" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  
  <Grid x:Name="LayoutRoot" Background="White">
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <TextBlock Text="Name:" />
    <TextBox Text="{Binding Name, Mode=TwoWay}" Grid.Column="1" />

    <TextBlock Text="Url:" Grid.Row="1" />
    <TextBox Text="{Binding Url}" Grid.Row="1" Grid.Column="1" />
  </Grid>
</UserControl>